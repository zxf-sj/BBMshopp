.block-button{ display: block; padding: 0; margin: 0; font-size: inherit; line-height: inherit; background: none; }
.block-button:after{ display: none; }
.header { background: #26a5ef; color: #fff; background: -webkit-gradient(linear, 0 0, 0 bottom, from(#44b9fe), to(#028dde)); padding: 48rpx 0 32rpx; height: 380rpx; overflow: hidden; }
.header .data-col{ text-align: center; border-right: 1rpx solid rgba(255, 255, 255, 0.35); }
.header .data-col:last-child{ border-right: none; }
.menu-list{ flex-wrap: wrap; -webkit-flex-wrap: wrap; background: #fff; padding: 80rpx 0 0; }
.menu-list .menu-item{ width: 33.333333%; text-align: center; font-size: 10pt; }
.menu-list .menu-item wx-button{ display: inline-block; margin-bottom: 80rpx; }
.menu-list .menu-item wx-image{ width: 94rpx; height: 94rpx; margin-bottom: 6rpx; }
