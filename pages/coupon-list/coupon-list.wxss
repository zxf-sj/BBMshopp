.info {
    padding: 20rpx;
    width: 100%;
}

.info .info-content {
    width: 100%;
    position: relative;
    height: 190rpx;
}

.info-content image {
    width: 100%;
    height: 190rpx;
}

.info-content .content {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
}

.content .content-body {
    width: 100%;
    height: 140rpx;
    position: relative;
}

.content .content-body .btn {
    position: absolute;
    right: 24rpx;
    height: 60rpx;
    color: #fff;
    padding: 10rpx 0;
    border-radius: 10rpx;
    width: 180rpx;
    top: 50rpx;
}

.content .content-body .price_1 {
    margin-left: 24rpx;
    line-height: 0.8;
}

.sub {
    background-color: #ff7b33;
}

.coupon-footer {
    font-size: 11px;
    color: #666666;
    padding: 20rpx 24rpx;
    background: #fff;
    margin-bottom: 20rpx;
    border-radius: 0rpx 0rpx 16rpx 16rpx;
}